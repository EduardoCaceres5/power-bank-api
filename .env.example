# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:6543/postgres

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# WsCharge Configuration (HTTP API)
WSCHARGE_API_URL=https://api.w-dian.cn/operate
WSCHARGE_OCODE=your_operator_code         # Operator identifier (contact business to obtain)
WSCHARGE_USERNAME=your_wscharge_username  # Account username
WSCHARGE_PASSWORD=your_wscharge_password  # Account password

# WsCharge Configuration (Legacy WebSocket)
WSCHARGE_SERVICE_ID=your-service-id
WSCHARGE_TIMEOUT=30000

# JWT Secret (for additional security if needed)
JWT_SECRET=your-super-secret-jwt-key

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:19006,exp://192.168.1.100:19000

# Logging
LOG_LEVEL=debug
