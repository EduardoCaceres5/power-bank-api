# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:6543/postgres

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Pagopar Configuration (Paraguay Payment Gateway)
PAGOPAR_PUBLIC_KEY=pk_test_your_public_key
PAGOPAR_PRIVATE_KEY=sk_test_your_private_key
PAGOPAR_MERCHANT_TOKEN=your_merchant_token
PAGOPAR_ENVIRONMENT=sandbox  # sandbox o production
PAGOPAR_WEBHOOK_SECRET=your_webhook_secret
PAGOPAR_API_URL=https://api.pagopar.com/v1
PAGOPAR_SANDBOX_URL=https://api.pagopar.com/sandbox

# WsCharge Configuration (HTTP API)
WSCHARGE_API_URL=https://api.w-dian.cn/operate
WSCHARGE_OCODE=your_operator_code         # Operator identifier (contact business to obtain)
WSCHARGE_USERNAME=your_wscharge_username  # Account username
WSCHARGE_PASSWORD=your_wscharge_password  # Account password

# WsCharge Configuration (Legacy WebSocket)
WSCHARGE_SERVICE_ID=your-service-id
WSCHARGE_TIMEOUT=30000

# WsCharge Sync Configuration
# Intervalo en segundos para sincronizar estado de gabinetes desde WsCharge API
# Por defecto: 30 segundos
WSCHARGE_SYNC_INTERVAL_SECONDS=30

# Cabinet Monitor Configuration
# Tiempo sin heartbeat antes de marcar gabinete como offline (en minutos)
HEARTBEAT_TIMEOUT_MINUTES=5
# Intervalo de verificación de gabinetes offline (en minutos)
CABINET_CHECK_INTERVAL_MINUTES=2

# JWT Secret (for additional security if needed)
JWT_SECRET=your-super-secret-jwt-key

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:19006,exp://192.168.1.100:19000

# Logging
LOG_LEVEL=debug

# Cloudinary Configuration (for material uploads)
# Obtén estos valores desde: https://console.cloudinary.com/
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=power-bank-materials
